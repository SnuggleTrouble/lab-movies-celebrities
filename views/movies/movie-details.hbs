<h2>Movie Details</h2>
<div>
  <h3>{{movie.title}}</h3>
  <h4>{{movie.genre}}</h4>
  <h4>{{movie.plot}}</h4>
  <p>Cast</p>
  <ul>
    {{#each movie.cast}}
      <li>
        {{this.name}}
        <br />
        {{this.occupation}}
        <br />
        {{this.catchPhrase}}
      </li>
    {{/each}}
  </ul>
  <div>
    <a href="movies/{{movie.id}}">See details</a>
    <a href="movies/{{movie.id}}/edit">Edit</a>
    <form action="movies/{{movie.id}}/delete" method="post">
      <button type="submit">Delete</button>
    </form>
  </div>
</div>